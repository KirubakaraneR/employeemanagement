<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>EmployeeController</servlet-name>
    <servlet-class>com.ideas2it.project.employeemanagement.controller.EmployeeController</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>ProjectController</servlet-name>
    <servlet-class>com.ideas2it.project.projectmanagement.controller.ProjectController</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>LoginAuthentication</servlet-name>
    <servlet-class>com.ideas2it.project.loginauthentication.logincontroller.LoginAuthentication</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>EmployeeController</servlet-name>
    <url-pattern>/EmployeeController</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>ProjectController</servlet-name>
    <url-pattern>/ProjectController</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>LoginAuthentication</servlet-name>
    <url-pattern>/LoginAuthentication</url-pattern>
  </servlet-mapping>
</web-app>
